#include<iostream>
#include<string.h>
using namespace std;
int main(){

string nombre,edad;
// Devlan Jiménez
for(int i=0; i<5; i++){
cout<<" Ingrese su nombre "<<endl;
cin>>nombre;
cout<<"Usted se llama "<<nombre<<endl;
 getline(cin, nombre); // Para leer nombres con espacio
    cout << "Ingrese su edad: ";
    cin >> edad;
    cout << "\nHola " << nombre << ", tienes " << edad << " años.\n";
}

return 0;
}

